-- Variables
local replicatedStorage = game:GetService("ReplicatedStorage")
local remote = replicatedStorage:WaitForChild("Remotes"):WaitForChild("Collect")

-- Referencias a la GUI
local screenGui = Instance.new("ScreenGui")
screenGui.Parent = game.Players.LocalPlayer:WaitForChild("PlayerGui")
screenGui.ResetOnSpawn = false

local frame = Instance.new("Frame")
frame.Parent = screenGui
frame.Name = "MainFrame"
frame.Size = UDim2.new(0.5, 0, 0.5, 0) -- Tamaño inicial de la GUI (la mitad de la pantalla)
frame.Position = UDim2.new(0.25, 0, 0.25, 0) -- Posición inicial centrada
frame.BackgroundTransparency = 0.5 -- Transparencia del fondo para que sea semi-transparente
frame.BackgroundColor3 = Color3.new(0, 0, 0) -- Color del fondo
frame.BorderSizePixel = 0 -- Sin borde
frame.Active = true -- Hacer la GUI interactiva

local toggleButton = Instance.new("TextButton")
toggleButton.Parent = frame
toggleButton.Name = "ToggleButton"
toggleButton.Text = "Activar"
toggleButton.Size = UDim2.new(1, 0, 0.2, 0) -- Tamaño del botón (el 20% de la altura del frame)
toggleButton.Position = UDim2.new(0, 0, 0.75, 0) -- Posición del botón alineada en la parte inferior
toggleButton.BackgroundColor3 = Color3.new(1, 1, 1) -- Color de fondo del botón
toggleButton.BorderSizePixel = 0 -- Sin borde

local hideButton = Instance.new("TextButton")
hideButton.Parent = screenGui
hideButton.Name = "HideButton"
hideButton.Text = ""
hideButton.Size = UDim2.new(0.1, 0, 0.1, 0) -- Tamaño del botón ocultar (el 10% de la pantalla)
hideButton.Position = UDim2.new(0.9, 0, 0, 0) -- Posición del botón en la esquina superior derecha
hideButton.BackgroundColor3 = Color3.new(1, 0, 0)
hideButton.BackgroundTransparency = 0.5
hideButton.BorderSizePixel = 0

local uiCorner = Instance.new("UICorner")
uiCorner.Parent = hideButton
uiCorner.CornerRadius = UDim.new(1, 0)

-- Variables de control
local isCollecting = false
local isFrameVisible = true

-- Función para activar/desactivar el bucle
local function toggleCollecting()
    isCollecting = not isCollecting
    if isCollecting then
        toggleButton.Text = "Desactivar"
    else
        toggleButton.Text = "Activar"
    end
end

-- Función para mostrar/ocultar el Frame
local function toggleFrameVisibility()
    isFrameVisible = not isFrameVisible
    frame.Visible = isFrameVisible
end

-- Conectar la función al botón
toggleButton.MouseButton1Click:Connect(toggleCollecting)
hideButton.MouseButton1Click:Connect(toggleFrameVisibility)

-- Hacer que la GUI sea movible con el mouse
local dragging = false
local dragStart, startPos, dragInput

frame.InputBegan:Connect(function(input)
    if input.UserInputType == Enum.UserInputType.MouseButton1 then
        dragging = true
        dragStart = input.Position
        startPos = frame.Position
    end
end)

frame.InputChanged:Connect(function(input)
    if dragging and input.UserInputType == Enum.UserInputType.MouseMovement then
        dragInput = input
        local delta = input.Position - dragStart
        frame.Position = UDim2.new(startPos.X.Scale, startPos.X.Offset + delta.X, startPos.Y.Scale, startPos.Y.Offset + delta.Y)
    end
end)

frame.InputEnded:Connect(function(input)
    if input == dragInput then
        dragging = false
    end
end)

-- Seleccionar la imagen específica por ID
local imageId = 10919793581
local selectedImage = Instance.new("ImageLabel")
selectedImage.Parent = hideButton
selectedImage.Size = UDim2.new(1, 0, 1, 0)
selectedImage.Position = UDim2.new(0.5, 0, 0.5, 0) -- Alinear la imagen en el centro de la bola
selectedImage.AnchorPoint = Vector2.new(0.5, 0.5) -- Centrar la imagen
selectedImage.Image = "rbxassetid://" .. imageId
selectedImage.BackgroundTransparency = 1

-- Bucle para enviar el evento al servidor repetidamente
while true do
    wait()
    if isCollecting then
        remote:FireServer(6.363010406494141)
    end
end
